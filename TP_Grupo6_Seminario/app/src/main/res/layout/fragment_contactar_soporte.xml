<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-au"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactarSoporteFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:layout_weight="5"
        android:fontFamily="@font/aileron_bold_font"
        android:text="Contactar soporte"
        android:textAlignment="center"
        android:textColor="#403B3B"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="557dp"
        android:layout_marginTop="60dp"
        android:inputType="text"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="25dp"
        android:paddingRight="30dp"
        android:paddingBottom="25dp">


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp"
            android:background="#403B3B" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asunto:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextAsunto"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edittext_redondeado"
            android:ems="10"
            android:hint="Consulta"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensaje:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextMensaje"
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:layout_gravity="top|start"
            android:background="@drawable/edittext_redondeado"
            android:ems="10"
            android:gravity="top"
            android:hint="Hola!"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:scrollbars="vertical"
            android:scrollHorizontally="false" />

        <Button
            android:id="@+id/btnEnviarMail"
            android:layout_width="289dp"
            android:layout_height="37dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/boton_iniciarsesion"
            android:clickable="true"
            android:text="EnvÃ­ar"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</FrameLayout>
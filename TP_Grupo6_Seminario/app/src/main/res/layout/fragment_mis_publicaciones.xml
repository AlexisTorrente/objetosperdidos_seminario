<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisPublicacionesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:inputType="text"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:paddingRight="20dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:text="Mis Publicaciones"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtSinPublicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃºn no tiene publicaciones"
            android:textAlignment="center"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/pbMisPublicaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="150dp"
            ></ProgressBar>


        <ListView
            android:id="@+id/lvMisPublicaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</FrameLayout>


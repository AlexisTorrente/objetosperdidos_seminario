<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCECE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:background="#F3F3F3"
        android:orientation="horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewImagenP"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/prueba"
            android:padding="1dp">

        </ImageView>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#EFEFEF"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtTituloPublicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewImagenP"
                android:text="PerdÃ­ mi"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtInfoExtra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LOCALIDAD: TIGRE " />

        </LinearLayout>

        <Button
            android:id="@+id/btnEditarMiPublicacion"
            android:layout_width="20dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="@drawable/redondear_boton_editar"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="center"/>
        <Button
            android:id="@+id/btnEliminarMiPublicacion"
            android:layout_width="20dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="@drawable/redondear_boton_recuperado"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/txtRecuperado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RECUPERADO"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

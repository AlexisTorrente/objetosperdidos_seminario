<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="25dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:text="¿Recuperaste o recupero este objeto su dueño?">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:textAlignment="textStart"
        android:text="En caso de seleccionar 'Recuperado' el objeto se registrará como recuperado y no podrá verse más en la sección de objetos perdidos/encontrados.">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPopUpRecuperado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/color_fondo_toolbar"
            android:text="Recuperado"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnPopUpCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="Cancelar"
            android:textColor="#FFFEFE" />

    </LinearLayout>

</LinearLayout>

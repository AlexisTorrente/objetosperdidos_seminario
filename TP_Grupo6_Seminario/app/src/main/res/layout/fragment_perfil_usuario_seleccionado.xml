<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfilUsuarioSeleccionadoFragment">

    <LinearLayout

        android:id="@+id/linearLayout10"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="132dp"
            android:layout_height="170dp"
            android:src="@drawable/icono_usuario_generico" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:text="Usuario"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tvUsuarioSeleccionado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#D5D5D5"
                android:fontFamily="@font/dm_sans"
                android:textColor="#000000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:text="Nombre"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tvNombreUsuarioSeleccionado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#D5D5D5"
                android:fontFamily="@font/dm_sans"
                android:textColor="#000000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:text="Correo"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tvCorreoUsuarioSeleccionado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#D5D5D5"
                android:fontFamily="@font/dm_sans"
                android:textColor="#000000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:text="Zona"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tvZonaUsuarioSeleccionado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="#D5D5D5"
                android:fontFamily="@font/dm_sans"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <TextView

        android:id="@+id/tvDescripcionUsuarioSeleccionado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#D5D5D5"
        android:minLines="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#D5D5D5"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnPublicarComentarioUsuarioSeleccionado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionUsuarioSeleccionado">

        <ListView

            android:id="@+id/lvComentariosUsuarioSeleccionado"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

    <ProgressBar

        android:id="@+id/progressBarEsperaComentarios"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="150dp"
        android:foregroundGravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent" />

    <Button

        android:id="@+id/btnPublicarComentarioUsuarioSeleccionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/boton_iniciarsesion"
        android:text="Publicar comentario"
        android:textColor="#FFFEFE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>